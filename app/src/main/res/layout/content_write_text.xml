<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wmad.iti.memories.WriteTextActivity"
    tools:showIn="@layout/activity_write_text"
    android:paddingBottom="@dimen/activity_vertical_margin">

   <include android:id="@+id/memory"
       layout="@layout/toolbar_memory"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:scrollbars="none">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:paddingTop="70dp"
        android:weightSum="10"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:weightSum="6"
        >

        <EditText
            android:id="@+id/writeMemoryText"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:hint="@string/memoryHint"
            android:layout_weight="6"
            android:inputType="text"
            android:textColorHint="#00bcd4"
            android:padding="10dp"
            android:background="@null"
            />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="7"
        android:weightSum="6"
        android:gravity="center"
        android:paddingTop="20dp"
        >
        <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="5.5"
            android:id="@+id/imagetaken"
            android:layout_gravity="center"/>
</LinearLayout>


</LinearLayout>
    </ScrollView>

</RelativeLayout>
