<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:elevation="200dp"
    card_view:cardBackgroundColor="#fff">

    <!--big linear-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_weight="2"
            >
            <android.support.v7.widget.AppCompatImageView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:background="@drawable/ic_account_box_black_24dp"
                android:id="@+id/imagep" />


            <TextView
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/entermemory"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_marginTop="15dp"
                android:hint="memory"
                android:textColorHint="#00bcd4"/>

            <!--end horizontal-->
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_weight="1"
            >
            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:background="@android:color/darker_gray"
                android:backgroundTint="#dddcdc"
                />


        </LinearLayout>

        <!--second vertical-->
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginLeft="19dp"
            android:layout_weight="7"
            android:layout_marginTop="10dp"

            >
            <!--status-->
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:id="@+id/status_layout"
                android:layout_weight="2"
                >
                <android.support.v7.widget.AppCompatImageView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:background="@drawable/status48"
                    android:id="@+id/videoimage" />

                <TextView
                    android:id="@+id/video"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:textColor="#607D8B"
                    android:textSize="15dp"
                    android:layout_marginTop="3dp"
                    android:text="status"

                    />

                <!--end status-->
            </LinearLayout>

            <!--photo-->
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingLeft="8dp"
                android:id="@+id/photo_layout"
                android:layout_weight="2"

                >

                <!-- camera-->
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:background="@drawable/camera48"
                    android:id="@+id/cameraimg" />

                <TextView
                    android:id="@+id/camera"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:textColor="#607D8B"
                    android:textSize="15dp"
                    android:layout_marginTop="3dp"
                    android:text="photo"



                    />


                <!-- end photo-->
            </LinearLayout>
            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4"
                android:paddingLeft="8dp"
                android:id="@+id/check_layout"
                android:layout_weight="2"

                >

                <!--check in -->
                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_gravity="center"
                    android:background="@drawable/location48"
                    android:id="@+id/locationimg" />

                <TextView
                    android:id="@+id/location"
                    android:layout_width="wrap_content"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:textColor="#607D8B"
                    android:textSize="15dp"
                    android:layout_marginTop="3dp"
                    android:text="location"

                    />

                <!-- end check in-->
            </LinearLayout>

            <!-- end second vertical-->
        </LinearLayout>
        <!--end big linear-->
    </LinearLayout>

</android.support.v7.widget.CardView>