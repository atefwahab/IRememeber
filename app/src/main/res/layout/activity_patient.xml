<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.volleydemo.patentlist.PatientActivity"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>



    <!--first layout for picture-->

    <FrameLayout
        android:weightSum="10"

        android:layout_width="match_parent"
        android:layout_height="200dp">

        <!--circle view for preview profile picture-->
        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/default_profle"
            android:id="@+id/profile_circularImageView"
            app:civ_border_color="#EEEEEE"
            app:civ_border_width="4dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#9C27B0"
            android:layout_gravity="center"/>



    </FrameLayout>
        <!-- layout for Location-->
        <LinearLayout
         android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="visible"
            android:id="@+id/locationLayout">


                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textSize="20sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/loctionTextView" />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/Location"
                android:layout_marginLeft="5dp"
                android:id="@+id/loctionOfPtientTextView" />
        </LinearLayout>
        <!-- Layout for Memory -->
        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="visible"
            android:id="@+id/memoryLayout">


            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Memory"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:textColor="@color/colorPrimary"
                android:id="@+id/memoryTextView" />

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="memory"
                android:layout_marginLeft="5dp"
                android:id="@+id/memoryOfPtientTextView" />
        </LinearLayout>

</LinearLayout>
